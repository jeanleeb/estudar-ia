{
  "name": "estudar-ia",
  "version": "0.0.0",
  "scripts": {
    "dev:web": "nx serve estudar-ia-web --port 3000",
    "dev:ai": "nx run ai-tutor-service:run",
    "dev": "pnpm dev:web",

    "build:web": "nx run estudar-ia-web:vite:build",
    "preview:web": "nx run estudar-ia-web:vite:preview",

    "test:web": "nx test estudar-ia-web",
    "test:affected": "nx affected -t test",
    "test": "nx run-many -t test",

    "biome": "biome check --fix --unsafe ./apps ./libs",
    "lint": "nx run-many -t lint",
    "type-check": "bash scripts/type-check-all.sh",
    "check": "nx run-many -t check",

    "db:types": "dotenv -e .env.local -- sh -c 'supabase gen types typescript --project-id $SUPABASE_PROJECT_ID > libs/domain/src/entities/database.types.ts'",
    "nx:reset": "nx reset"
  },
  "private": true,
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@nx/vite": "22.4.4",
    "@nx/vitest": "22.4.4",
    "@nx/web": "22.4.4",
    "@nxlv/python": "latest",
    "dotenv-cli": "11.0.0",
    "nx": "22.4.4",
    "supabase": "2.74.5",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.28.0"
}
