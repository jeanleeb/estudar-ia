{
  "file_scan_exclusions": ["**/routeTree.gen.ts"],
  "languages": {
    "JavaScript": {
      "formatter": { "language_server": { "name": "biome" } },
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.removeUnusedImports": true,
        "source.organizeImports.biome": true,
      },
    },
    "TypeScript": {
      "formatter": { "language_server": { "name": "biome" } },
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.removeUnusedImports": true,
        "source.organizeImports.biome": true,
      },
    },
    "TSX": {
      "formatter": { "language_server": { "name": "biome" } },
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.removeUnusedImports": true,
        "source.organizeImports.biome": true,
      },
    },
    "JSON": {
      "formatter": { "language_server": { "name": "biome" } },
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true,
      },
    },
    "CSS": {
      "formatter": { "language_server": { "name": "biome" } },
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true,
      },
      "language_servers": ["tailwindcss-intellisense-css", "biome"],
    },
    "Python": {
      "language_servers": ["basedpyright", "ruff", "!pywright"],
      "format_on_save": "on",
      "formatter": [
        {
          "language_server": {
            "name": "ruff",
          },
        },
      ],
    },
  },
  "lsp": {
    "biome": {
      "settings": {
        "organize_imports_on_save": true,
      },
    },
    "basedpyright": {
      "settings": {
        "python": {
          "analysis": {
            "autoImportCompletions": true,
            "extraPaths": [
              "apps/ai-tutor-service/src",
              "apps/ai-tutor-service/tests",
            ],
          },
        },
      },
    },
    "tailwindcss-language-server": {
      "settings": {
        "classFunctions": ["cva", "cx"],
      },
    },
  },
}
