{
  "name": "ai-tutor-service",
  "projectType": "application",
  "sourceRoot": "apps/ai-tutor-service/src",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/ai-tutor-service",
        "command": "uv run uvicorn app.main:app --reload --host 0.0.0.0 --port 8000"
      }
    },
    "run": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/ai-tutor-service",
        "command": "uv run ai-tutor-service"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/ai-tutor-service",
        "command": "uv run pytest"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/ai-tutor-service",
        "command": "uv run ruff check ."
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/ai-tutor-service",
        "command": "uv run ruff format ."
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/ai-tutor-service",
        "command": "uv run ty check"
      }
    },
    "openapi": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/ai-tutor-service",
        "command": "uv run python scripts/generate_openapi.py"
      }
    },
    "check": {
      "executor": "nx:run-commands",
      "dependsOn": ["format", "lint", "type-check", "test"],
      "options": {
        "cwd": "apps/ai-tutor-service",
        "commands": [{ "command": "echo \"ai-tutor-service check OK\""}]
      }
    }
  }
}
